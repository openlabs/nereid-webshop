{% extends 'base.jinja' %}

{% block extra_head %}
{{ super() }}
<script type="application/ld+json">
{
   "@context": "http://schema.org",
   "@type": "WebSite",
   "url": "{{ url_for('nereid.website.home', _external=True) }}",
   "potentialAction": {
     "@type": "SearchAction",
     "target": "{{ url_for('product.product.quick_search', _external=True)|safe }}?q={search_term_string}",
     "query-input": "required name=search_term_string"
   }
}
</script>
{% endblock extra_head %}

{% block breadcrumb %}
<li>
  <a href="{{ url_for('nereid.website.home') }}">{{ _('Home') }}</a>
</li>
{% endblock breadcrumb %}

{% block main %}
{% block banner %}
<section class="main-banner">
  <div class="container">
    <div class="row">
      <!-- Banner Background Image -->
      <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide hidden-xs hidden-sm" data-ride="carousel">
        {% if get_banner_category('Home Page Banners') %}
          <div class="carousel-inner">
          {% for banner in get_banner_category('Home Page Banners').published_banners %}
            <div class="item {% if loop.first %}active{% endif %}">
            {% if banner.type == 'custom_code' %}
              {{ banner.custom_code|safe }}
            {% else %}
              <a href="{% if banner.click_url %}{{ banner.click_url }} {% endif%}">
            <img
            {% if banner.type == 'image' %}
              src="{{ banner.file.url }}"
            {% elif banner.type == 'remote_image' %}
              src="{{ banner.remote_image_url }}"
            {% endif %}
              alt="{{ banner.alternative_text }}">
            </a>
            {% endif %}
          </div>
        {% endfor %}
        </div>
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="icon-next"></span>
        </a>
      {% endif %}
      </div>
    </div>
  </div>
</section>
{% endblock banner %}

<section class="products latest">
  <div class="container">
    {% set node = request.nereid_website.featured_products_node %}
    {% if node %}
    <div class="row" id="featured-node">
      <h3>Featured Products</h3>
      {% for product in node.products[:3] %}
        <a href="{{ url_for('product.product.render', uri=product.uri) }}">
          <div class="col-md-4 thumb">
            <img class="img img-responsive"
              src="{{ CDN }}{{ product.default_image.transform_command().thumbnail(400, 400, 'a') }}"
              alt="{{ product.name }}" title="{{ product.name }}"/>
            <div class="fig-caption">
              <h4>{{ product.name }}</h4>
              <p>{{ product.get_description()|truncate(70, end="...View Details") }}</p>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
    <br>
    {% endif %}
    <div class="row">
      <div class="col-md-6 thumb">
        <img src="holder.js/100%x320" alt="...">
        <div class="fig-caption" style="width:95%">
          <h4>Product Name</h4>
          <p>Description </p>
        </div>
      </div>
      <div class="col-md-6 thumb">
        <img src="holder.js/100%x320" alt="...">
        <div class="fig-caption" style="width:95%">
          <h4>Product Name</h4>
          <p>Description </p>
        </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="col-md-12 shop-assurance">
      <ul class="list-inline center">
        <li>
          <div class="feature-assurance">
            <img src="{{ url_for('nereid.webshop.send_static_file', filename='images/assurance/lock.png') }}">
            <h5>SECURE PAYMENT</h5>
            <p>Payment via credit card or Paypal</p>
          </div>
        </li>
        <li>
          <div class="feature-assurance">
            <img src="{{ url_for('nereid.webshop.send_static_file', filename='images/assurance/warranty-services.png') }}">
            <h5>WARRANTY &amp; SERVICE</h5>
            <p>Our customer service is simple and effective.</p>
          </div>
        </li>
        <li>
          <div class="feature-assurance">
            <img src="{{ url_for('nereid.webshop.send_static_file', filename='images/assurance/heart.png') }}">
            <h5>QUALITY</h5>
            <p>We are Certified Quality and Environment. And Living Heritage Company.</p>
          </div>
        </li>
        <li>
          <div class="feature-assurance">
            <img src="{{ url_for('nereid.webshop.send_static_file', filename='images/assurance/customer-service.png') }}">
            <h5>CUSTOMER SERVICE</h5>
            <p>A doubt, a question? reach us at 0000-000-0000.</p>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>
{% endblock main %}


{% block script_tags %}
{{ super() }}
<script type="text/javascript">
  $('.container-breadcrumb').hide();
</script>
{% endblock script_tags %}
