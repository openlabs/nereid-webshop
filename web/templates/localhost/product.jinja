{% extends 'localhost/home.jinja' %}

{% block title %}{{ product.name }}{% endblock %}

{% block breadcrumb %}
{{ super() }}
{% if request.args.get('browse_node') and ',' in request.args.get('browse_node')%}
{% set bn_uri,bn_name = request.args.get('browse_node').split(',') %}
<li>
  <span class="divider"></span>
  <a href="{{ url_for('product.browse_node.render', uri=bn_uri) }}">{{ bn_name }}</a>
</li>
{% endif %}
<li>
  <span class="divider"></span>
  <a href="{{ url_for('product.product.render', uri=product.uri) }}">{{ product.name }}</a>
</li>
{% endblock %}

{% block main %}
    <div class="container">
      <!--Product-main section-->
      <div class="row">
        <div class="col-md-5 thumbs-image">
          <div class="col-md-3">
            <ul class="list-inline">
              <li><a href="#tab1" data-toggle="tab"><img src="images/products/tee1.jpg"></a></li>
              <li><a href="#tab2" data-toggle="tab"><img src="images/products/tee2.jpg"></a></li>
            </ul>
          </div>
          <div class="col-md-9">
            <div class="tab-content">
              <div class="tab-pane active" id="tab1">
                <div class="zoom-container">
                  <a id="zoom-target" href="images/products/tee1.jpg">
                    <img class="zoom-image" src="images/products/tee1.jpg" alt=""/>
                  </a>
                </div>
              </div>
              <div class="tab-pane" id="tab2">
                <img src="images/products/tee2.jpg">
              </div>
            </div>
          </div>
          <!--Add this plugin -->
          <div class="row addthis-social">
            <br>
            <!-- AddThis Button BEGIN -->
            <!--
            <div class="addthis_toolbox addthis_default_style addthis_32x32_style">
              <a class="addthis_button_preferred_1"></a>
              <a class="addthis_button_preferred_2"></a>
              <a class="addthis_button_preferred_3"></a>
              <a class="addthis_button_preferred_4"></a>
              <a class="addthis_button_compact"></a>
              <a class="addthis_counter addthis_bubble_style"></a>
            </div>
            <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-51bc173019597874"></script>
          -->
            <!-- AddThis Button END -->
          </div>
        </div>
        <div class="col-md-7">
        {% set sale_price = product.sale_price(1) %}
          <h4 class="product-heading">{{ product.name }}</h4>
          <h3 class="product-price"><span class="not">{{ product.list_price|currencyformat(request.nereid_currency.code) }}</span> {{ sale_price|currencyformat(request.nereid_currency.code) }}</h3>
          <p class="product-size"> Select Size : <br>
            <button class="btn btn-size disabled" type="radio">S</button>
            <button class="btn btn-size" name="size" type="radio" value="1">M</button>
            <button class="btn btn-size" name="size" type="radio" value="2">L</button>
            <button class="btn btn-size" name="size" type="radio" value="3">XL</button>
            <button class="btn btn-size" name="size" type="radio" value="4">XXL</button>
          </p>
          <div class="buy-now">
            <form action="" method="post" id="add-to-cart">
              <input type="hidden" name="quantity" value="1"/>
              <input type="hidden" name="product" value="{{ product.id }}"/>
              <input type="hidden" name="action" value="add"/>
              <button id="add-to-cart" quantity="1">Buy Now</button>
            </form>
          </div>
        </div>
      </div>
      <!--Product Description -->
      <div class="row">
        <div class="col-md-12 product-desc">
          <h4 class="main-heaidng">Product Description</h5>
          <p>{{ product.description|safe or '' }}</p>
        </div>
      </div>
    </div> 
{% endblock %}

{% block extra_footer %}
    <script>
      $('.list-inline > li > a').hover( function(){
        $(this).tab('show');
      });
    </script>
    <script src="{{ STATIC }}js/easyzoom.min.js"></script>
    <script>
      $('#zoom-target').easyZoom({
        parent: 'div.zoom-container'
      });
    </script>
{% endblock %}
