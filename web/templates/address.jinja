{% extends 'account-base.jinja' %}

{% from '_helpers.jinja' import render_address, render_field %}

{% block account %}
<!-- Account Information -->
<div class="row">
  <div class="row">
    <h4 class="account-heading col-md-7">Address Book 
      <a href="{{ url_for('party.address.edit_address') }}" class="btn btn-info pull-right btn-xs"title=""><i class="fa fa-plus"></i> &nbsp;Add new address</a>
    </h4>
  </div>
  <div class="tab-content row">
    <div class="col-md-7 tab-pane active" id="saved-address">
      {% for address in request.nereid_user.party.addresses %}
      <div class="well well-small">
        {{ render_address(address, 'Address # '+ loop.index|string) }}
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}

{% block script_tags %}
<script type="text/javascript">
  $('.account-heading a').click(function() {
    $(this).toggleClass('selected').siblings().addClass("selected");
  });
</script>
{% endblock %}