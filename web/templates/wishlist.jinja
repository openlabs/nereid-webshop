                    <a href="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove Item"><i class="fa fa-trash-o"></i></a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <!--Coupon row-->
        <div class="row coupon-row">
          <div class="col-md-6">
            <a href="" class="btn btn-default btn-md" data-original-title="" title=""><i class="fa fa-angle-double-left"></i>&nbsp; Continue Shopping</a>
            <a href="" class="btn btn-default" data-original-title="" title=""><i class="fa fa-times"></i> Clear Cart</a>
          </div>
