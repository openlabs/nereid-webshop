                  </div>
                  <div class="col-xs-2 cart-product-total">
                    <a href="/cart/delete/" title="Remove"><i class="fa fa-trash-o"></i></a>
                  </div>
                </div>
              </div>
          <%
            });
          %>
          <a href="{{ url_for('nereid.cart.view_cart') }}" class="btn btn-danger pull-right" >Checkout</a>
        <% } else { %>
          <div class="empty-cart center">
            <i class="fa fa-frown-o fa-3x"></i>
            <h3>hey !</h3>
            <p>Your shopping cart is empty</p>
          </div>
        <% } %>
